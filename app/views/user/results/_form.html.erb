<% if @result.errors.any? %>
    <div id="error_explanation">
        <p><%= pluralize(@result.errors.count, "error") %> prohibited this result from being saved:</p>
        <ul>
            <% @result.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: [ @event, @result], url: user_event_results_path do |form| %>
    <div>
        <%= result_input_fields(@event) %>
    </div>
    <div>
        <%= form.label :attempt_date %>
        <%= form.date_field :attempt_date, value: Date.today, max: Date.today %>
    </div>
    <%= form.submit %>
<% end %>